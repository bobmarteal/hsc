---
// import components
import Heading from "../../components/ui/Heading.astro";
import Link from "@ui/Link.astro";

import BaseballField from "../../assets/baseball-field.jpg";
import Football from "../../assets/Football-player.jpg";
import PlayingPool from "../../assets/playing-pool.jpg";
import { Image } from "astro:assets";

import crestFeature1Data from "../../data/crest-feature-1.json";
---

<!-- Main carousel feature -->
<section class="full-width">
  <div class="carousel-feature">
    {
      crestFeature1Data.map((slide) => (
        <div class="text-centered-image crest-overlay-with-fade crest-transparent">
          <Image src={Football} alt="" class="full-width" />
          <div class="text">
            <Heading
              tagName="h2"
              size="base5"
              weight="black"
              family="serif"
              classes="align-center"
              id="top"
            >
              {slide.title}
            </Heading>
            <p class="align-center inline-center">
              {slide.link.map((link) => (
                <Link
                  style="primary"
                  href={link.url}
                  classes="button button--primary inline-center"
                  text={link.text}
                  icon={{ name: "arrow-right", side: "right" }}
                />
              ))}
            </p>
          </div>
        </div>
      ))
    }
  </div>
</section>
<script is:inline src="https://unpkg.com/flickity@2/dist/flickity.pkgd.min.js"
></script>
<script is:inline>
  var flktyFeature = new Flickity(".carousel-feature", {
    wrapAround: true,
    imagesLoaded: true,
  });
</script>
