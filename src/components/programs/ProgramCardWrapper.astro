---
// import Program Card data

import programCardData from "../../data/program-cards.json";
import ProgramCard from "./ProgramCard.astro";

// set up card type
export type programCard = {
  name: string;
  introText: string;
  linkText: string;
  image: string;
};
---

<!-- Simple example of basic Grid with two equal columns -->
<section class="m-bottom-3">
  <div class="grid one-one">
    {
      programCardData.map((programCard: programCard) => (
        <ProgramCard {...programCard} />
      ))
    }
  </div>
</section>
