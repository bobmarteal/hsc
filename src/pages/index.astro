    sidelines="true"
  />

  <Heading tagName="h3" size="base6" family="serif" class="align-center"
    >Scholarly Pursuits</Heading
  >
  <ProgramCardWrapper />
  <TextLinkGray />
  <TextLinkFullBleed />
  <QuoteBlock />
  <StatWrapper />
  <ImageGrid />
  <FeatureBlock />
  <ArticleCardCarousel />
  <EventCardCarousel />
  <FeatureBlockAlumni />
  <SimpleBlockCentered />
