---
// layout
import Breadcrumbs from "@/components/ui/Breadcrumbs.astro";
import LandingPageWrapper from "../layouts/LandingPageWrapper.astro";

// components

//ui items
import Heading from "@/components/ui/Heading.astro";

// images
import Football from "../assets/Football-player.jpg";
import { Image } from "astro:assets";
---

<LandingPageWrapper>
  <div class="primary-layout person-layout">
    <Breadcrumbs />
    <div class="person-hero full-width gray-light-bg m-bottom-3">
      <div class="grid one-two">
        <div class="image">
          <Image src={Football} width={800} alt="" class="circle-image" />
        </div>
        <div class="text">
          <div class="name-title">
            <Heading
              tagName="h3"
              size="base3"
              family="serif"
              classes="m-bottom-0">Dr. Alexander J. Werth</Heading
